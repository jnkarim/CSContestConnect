@{
    ViewData["Title"] = "Events Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-md-8">
        <h2 class="h3 mb-0 text-white fw-bold">Events Management</h2>
        <p class="text-light-50">Manage all contest events, registrations, and schedules.</p>
    </div>
    <div class="col-md-4 text-end">
        <button class="btn btn-gradient" data-bs-toggle="modal" data-bs-target="#createEventModal">
            <i class="fas fa-plus me-2"></i>Create New Event
        </button>
    </div>
</div>

<!-- Filter and Search -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card bg-dark border-secondary">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <select class="form-select bg-dark text-white border-secondary">
                            <option selected>All Categories</option>
                            <option>Programming</option>
                            <option>Database</option>
                            <option>Mobile</option>
                            <option>AI/ML</option>
                            <option>Web Development</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <select class="form-select bg-dark text-white border-secondary">
                            <option selected>All Status</option>
                            <option>Active</option>
                            <option>Registration</option>
                            <option>Completed</option>
                            <option>Cancelled</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-dark border-secondary">
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="Search events...">
                    <button class="btn btn-outline-light" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Events Grid -->
<div class="row">
    <!-- Event Card Example -->
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card bg-dark border-secondary event-card h-100">
            <div class="card-header d-flex justify-content-between align-items-center border-secondary">
                <span class="badge bg-success">Active</span>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-light" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="#"><i class="fas fa-edit me-2"></i>Edit</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-users me-2"></i>Participants</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-trash me-2"></i>Delete</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <h5 class="card-title text-white fw-bold">Algorithm Challenge 2024</h5>
                <p class="card-text text-light-50">A programming contest focusing on data structures and algorithms.</p>

                <div class="mb-3">
                    <small class="text-light-50">Category:</small>
                    <span class="badge bg-purple ms-1">Programming</span>
                </div>

                <div class="row text-center mb-3">
                    <div class="col-4">
                        <div class="text-white fw-bold">245</div>
                        <small class="text-light-50">Participants</small>
                    </div>
                    <div class="col-4">
                        <div class="text-white fw-bold">12</div>
                        <small class="text-light-50">Teams</small>
                    </div>
                    <div class="col-4">
                        <div class="text-white fw-bold">3</div>
                        <small class="text-light-50">Days Left</small>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-light-50">
                        <i class="fas fa-calendar me-1"></i>Jan 15, 2024
                    </small>
                    <a href="#" class="btn btn-sm btn-gradient">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Event Modal -->
<div class="modal fade" id="createEventModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title text-white fw-bold">Create New Event</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-light-50">Event Name</label>
                            <input type="text" class="form-control bg-dark text-white border-secondary" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-light-50">Category</label>
                            <select class="form-select bg-dark text-white border-secondary">
                                <option>Programming</option>
                                <option>Database</option>
                                <option>Mobile</option>
                                <option>AI/ML</option>
                                <option>Web Development</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light-50">Description</label>
                        <textarea class="form-control bg-dark text-white border-secondary" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-gradient">Create Event</button>
            </div>
        </div>
    </div>
</div>
