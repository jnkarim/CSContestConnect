@{
    ViewData["Title"] = "Events";
    Layout = "_Layout";
    ViewBag.HideNavbar = true; // Show admin navbar
}

<!-- Admin Navbar (Consistent across all pages) -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mb-4">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-controller="Admin" asp-action="Index">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link active" asp-controller="Admin" asp-action="Events">Events</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Reviews">Reviews</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a></li>
            </ul>
            <div class="d-flex">
                <a asp-controller="Events" asp-action="Create" class="btn btn-primary">Add New Event</a>
            </div>
        </div>
    </div>
</nav>

<div class="container-xxl">
    <div class="card mb-3">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">All Events</h5>
                <form class="d-flex" method="get" asp-controller="Events" asp-action="Index">
                    <input name="q" class="form-control form-control-sm me-2" type="search" placeholder="Search by title or location">
                    <button class="btn btn-sm btn-outline-secondary" type="submit">Search</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            @{
                var events = ViewBag.Events as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
            }
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (events.Any())
                        {
                            foreach (var e in events)
                            {
                                var title = (string)(e?.Title ?? "");
                                var subtitle = (string)(e?.Subtitle ?? e?.Description ?? "");
                                var location = (string)(e?.Location ?? "");
                                var status = (string)(e?.Status ?? "");
                                var statusClass = (string)(e?.StatusBadgeClass ?? "text-bg-secondary");
                                string dateText = "";
                                if (e?.Date is DateTime dt) { dateText = dt.ToString("MMM d, yyyy"); }
                                else if (e?.Date != null) { dateText = e.Date.ToString(); }
                        <tr>
                            <td>
                                <div class="fw-semibold">@title</div>
                                @if(!string.IsNullOrWhiteSpace(subtitle)){
                                    <div class="small text-secondary">@subtitle</div>
                                }
                            </td>
                            <td>@dateText</td>
                            <td>@location</td>
                            <td><span class="badge @statusClass">@status</span></td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a class="btn btn-sm btn-outline-secondary" asp-controller="Events" asp-action="Details" asp-route-id="@(e?.Id)">View</a>
                                    <a class="btn btn-sm btn-outline-primary" asp-controller="Events" asp-action="Edit" asp-route-id="@(e?.Id)">Edit</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-controller="Events" asp-action="Delete" asp-route-id="@(e?.Id)">Delete</a>
                                </div>
                            </td>
                        </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-secondary py-4">No events found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
    </script>
}
