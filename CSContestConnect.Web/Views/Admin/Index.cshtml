@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col">
        <h2 class="h3 mb-0 text-white fw-bold">Event Management Dashboard</h2>
        <p class="text-light-50">Welcome back! Here's an overview of your contests and activities.</p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow stat-card bg-gradient-purple text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-light">Active Events</h6>
                    <h3 class="fw-bold">12</h3>
                    <small class="text-success"><i class="fas fa-arrow-up"></i> 3 new this month</small>
                </div>
                <i class="fas fa-calendar-alt fa-2x"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow stat-card bg-dark text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-light">Total Participants</h6>
                    <h3 class="fw-bold">2,847</h3>
                    <small class="text-success"><i class="fas fa-arrow-up"></i> 15.2% increase</small>
                </div>
                <i class="fas fa-users fa-2x text-purple"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow stat-card bg-dark text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-light">Active Teams</h6>
                    <h3 class="fw-bold">456</h3>
                    <small class="text-info"><i class="fas fa-arrow-up"></i> 8.7% from last week</small>
                </div>
                <i class="fas fa-user-friends fa-2x text-warning"></i>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow stat-card bg-dark text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-light">Completed Contests</h6>
                    <h3 class="fw-bold">89</h3>
                    <small class="text-info"><i class="fas fa-trophy"></i> 5 this week</small>
                </div>
                <i class="fas fa-medal fa-2x text-success"></i>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row mb-4">
    <div class="col-xl-8 mb-4">
        <div class="card bg-dark shadow">
            <div class="card-header d-flex justify-content-between">
                <h5 class="text-white mb-0">Event Participation Overview</h5>
                <select class="form-select form-select-sm bg-dark text-light border-0">
                    <option>Last 7 days</option>
                    <option>Last 30 days</option>
                    <option>Last 3 months</option>
                </select>
            </div>
            <div class="card-body">
                <canvas id="participationChart" height="300"></canvas>
            </div>
        </div>
    </div>

    <div class="col-xl-4 mb-4">
        <div class="card bg-dark shadow">
            <div class="card-header">
                <h5 class="text-white mb-0">Event Categories</h5>
            </div>
            <div class="card-body">
                <canvas id="categoryChart" height="300"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Recent Events Table -->
<div class="row">
    <div class="col-12">
        <div class="card bg-dark shadow">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="text-white mb-0">Recent Events</h5>
                <a href="@Url.Action("Event", "Admin")" class="btn btn-sm btn-purple">View All</a>
            </div>
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Event ID</th>
                            <th>Event Name</th>
                            <th>Category</th>
                            <th>Participants</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>#EVT001</td>
                            <td><i class="fas fa-code text-purple me-2"></i> Algorithm Challenge</td>
                            <td><span class="badge bg-purple">Programming</span></td>
                            <td>245</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td>2024-01-15</td>
                            <td>
                                <button class="btn btn-sm btn-outline-light"><i class="fas fa-eye"></i></button>
                                <button class="btn btn-sm btn-outline-purple"><i class="fas fa-edit"></i></button>
                            </td>
                        </tr>
                        <!-- More rows... -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- FontAwesome -->
    <script src="https://kit.fontawesome.com/a2e0e6ad56.js" crossorigin="anonymous"></script>
    <script>
        // Participation Chart
        new Chart(document.getElementById('participationChart'), {
            type: 'line',
            data: {
                labels: ['Mon','Tue','Wed','Thu','Fri','Sat','Sun'],
                datasets: [{
                    label: 'Participants',
                    data: [120, 200, 150, 300, 250, 400, 380],
                    borderColor: '#9b59b6',
                    backgroundColor: 'rgba(155, 89, 182, 0.3)',
                    fill: true,
                    tension: 0.3
                }]
            }
        });

        // Category Chart
        new Chart(document.getElementById('categoryChart'), {
            type: 'doughnut',
            data: {
                labels: ['Programming','Database','AI/ML','Mobile'],
                datasets: [{
                    data: [45, 20, 25, 10],
                    backgroundColor: ['#9b59b6','#3498db','#f1c40f','#2ecc71']
                }]
            }
        });
    </script>
}
