@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
    ViewBag.HideNavbar = true; // hide main navbar for admin
}

<!-- Admin Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mb-4">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-controller="Admin" asp-action="Index">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link active" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Events">Events</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Reviews">Reviews</a></li>
            </ul>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-1"></i> Admin
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Login">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Admin Dashboard Content -->
<div class="container-fluid py-4">
    <!-- Page header -->
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mb-4">
        <div>
            <h1 class="h3 mb-1 fw-semibold">Admin Dashboard</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb small mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Admin</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Admin" asp-action="Events" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> New Event
            </a>
            <button class="btn btn-outline-secondary" data-bs-toggle="offcanvas" data-bs-target="#filtersPanel" aria-controls="filtersPanel">
                <i class="bi bi-sliders me-1"></i> Filters
            </button>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase small mb-1">Active Events</p>
                        <h3 class="mb-0">12</h3>
                    </div>
                    <span class="badge text-bg-success align-self-start"><i class="bi bi-arrow-up-right me-1"></i>8%</span>
                </div>
                <div class="card-footer bg-transparent small text-secondary">vs. last 30 days</div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase small mb-1">Registrations</p>
                        <h3 class="mb-0">1,482</h3>
                    </div>
                    <span class="badge text-bg-primary align-self-start"><i class="bi bi-people me-1"></i>Live</span>
                </div>
                <div class="card-footer bg-transparent small text-secondary">All-time</div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase small mb-1">Revenue</p>
                        <h3 class="mb-0">$12.4k</h3>
                    </div>
                    <span class="badge text-bg-warning align-self-start"><i class="bi bi-cash-coin me-1"></i>YTD</span>
                </div>
                <div class="card-footer bg-transparent small text-secondary">Ticketed events</div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-secondary text-uppercase small mb-1">Pending Reviews</p>
                        <h3 class="mb-0">7</h3>
                    </div>
                    <span class="badge text-bg-danger align-self-start"><i class="bi bi-exclamation-triangle me-1"></i>Action</span>
                </div>
                <div class="card-footer bg-transparent small text-secondary">Submissions awaiting approval</div>
            </div>
        </div>
    </div>

    <!-- Content Row: Tabs + Activity -->
    <div class="row g-3">
        <div class="col-12 col-xl-8">
            <!-- Live & Drafts Tabs -->
            <div class="card h-100">
                <div class="card-header bg-transparent d-flex flex-wrap align-items-center justify-content-between">
                    <ul class="nav nav-tabs card-header-tabs" id="eventsTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="live-tab" data-bs-toggle="tab" data-bs-target="#live" type="button" role="tab" aria-controls="live" aria-selected="true">
                                <i class="bi bi-broadcast me-1"></i> Live & Upcoming
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="drafts-tab" data-bs-toggle="tab" data-bs-target="#drafts" type="button" role="tab" aria-controls="drafts" aria-selected="false">
                                <i class="bi bi-pencil-square me-1"></i> Drafts
                            </button>
                        </li>
                    </ul>
                    <div class="d-flex gap-2">
                        <a asp-controller="Admin" asp-action="Events" class="btn btn-sm btn-outline-secondary">View All</a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="tab-content">
                        <!-- Live & Upcoming -->
                        <div class="tab-pane fade show active" id="live" role="tabpanel" aria-labelledby="live-tab">
                            <div class="table-responsive">
                                <table class="table align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Event</th>
                                            <th>Date</th>
                                            <th>Location</th>
                                            <th>Status</th>
                                            <th class="text-end">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">CodeFest 2026</div>
                                                <div class="small text-secondary">Global programming challenge</div>
                                            </td>
                                            <td>Oct 15, 2026</td>
                                            <td>Online</td>
                                            <td><span class="badge text-bg-success">Open</span></td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></button>
                                                <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></button>
                                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">Hackathon X</div>
                                                <div class="small text-secondary">AI & Systems sprint</div>
                                            </td>
                                            <td>Nov 1, 2026</td>
                                            <td>New York</td>
                                            <td><span class="badge text-bg-warning">Filling</span></td>
                                            <td class="text-end">
                                                <button class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></button>
                                                <button class="btn btn-sm btn-outline-secondary"><i class="bi bi-eye"></i></button>
                                                <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Drafts -->
                        <div class="tab-pane fade" id="drafts" role="tabpanel" aria-labelledby="drafts-tab">
                            <div class="border rounded p-4 text-center text-secondary">
                                <i class="bi bi-file-earmark-text display-6 d-block mb-2"></i>
                                <p class="mb-2">No drafts yet.</p>
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Admin" asp-action="Events">Create your first event</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-transparent small text-secondary">
                    Tip: Use the Filters panel to quickly narrow results.
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-12 col-xl-4">
            <div class="card h-100">
                <div class="card-header bg-transparent d-flex align-items-center justify-content-between">
                    <h2 class="h6 mb-0">Recent Activity</h2>
                    <a class="btn btn-sm btn-outline-secondary">View Logs</a>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0 d-flex align-items-start justify-content-between">
                            <div class="me-3">
                                <div class="fw-medium">New registration</div>
                                <div class="small text-secondary">alice@dev.com · CodeFest 2026</div>
                            </div>
                            <span class="small text-secondary">2m</span>
                        </li>
                        <li class="list-group-item px-0 d-flex align-items-start justify-content-between">
                            <div class="me-3">
                                <div class="fw-medium">Event updated</div>
                                <div class="small text-secondary">Hackathon X schedule</div>
                            </div>
                            <span class="small text-secondary">1h</span>
                        </li>
                        <li class="list-group-item px-0 d-flex align-items-start justify-content-between">
                            <div class="me-3">
                                <div class="fw-medium">User flagged</div>
                                <div class="small text-secondary">Review required</div>
                            </div>
                            <span class="small text-secondary">3h</span>
                        </li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary"><i class="bi bi-people me-1"></i> Manage Users</button>
                        <button class="btn btn-outline-warning"><i class="bi bi-shield-check me-1"></i> Pending Reviews</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Offcanvas Filters -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="filtersPanel" aria-labelledby="filtersPanelLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="filtersPanelLabel">Filters</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <form class="vstack gap-3">
                <div>
                    <label class="form-label small">Status</label>
                    <select class="form-select">
                        <option>Any</option>
                        <option>Open</option>
                        <option>Filling</option>
                        <option>Closed</option>
                        <option>Draft</option>
                    </select>
                </div>
                <div>
                    <label class="form-label small">Date range</label>
                    <div class="input-group">
                        <input type="date" class="form-control" />
                        <span class="input-group-text">to</span>
                        <input type="date" class="form-control" />
                    </div>
                </div>
                <div>
                    <label class="form-label small">Location</label>
                    <input type="text" class="form-control" placeholder="City or Online" />
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-funnel me-1"></i> Apply</button>
                    <button type="reset" class="btn btn-outline-secondary">Reset</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
    </script>
}
