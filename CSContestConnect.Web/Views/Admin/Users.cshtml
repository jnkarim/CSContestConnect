@{
    ViewData["Title"] = "Users";
    Layout = "_Layout";
    ViewBag.HideNavbar = true; // Show admin navbar
}

<!-- Admin Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mb-4">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-controller="Admin" asp-action="Index">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Events">Events</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Reviews">Reviews</a></li>
                <li class="nav-item"><a class="nav-link active" asp-controller="Admin" asp-action="Users">Users</a></li>
            </ul>
            <div class="d-flex">
                <a asp-controller="Users" asp-action="Create" class="btn btn-primary">Add User</a>
            </div>
        </div>
    </div>
</nav>

<div class="container-xxl">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">All Users</h5>
            <form class="d-flex" method="get" asp-controller="Users" asp-action="Index">
                <input name="q" class="form-control form-control-sm me-2" type="search" placeholder="Search name or email">
                <button class="btn btn-sm btn-outline-secondary" type="submit">Search</button>
            </form>
        </div>
        <div class="card-body">
            @{
                var users = ViewBag.Users as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
            }
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Joined</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (users.Any())
                    {
                        foreach (var u in users)
                        {
                            string joinedText = "";
                            if (u?.Joined is DateTime dt) { joinedText = dt.ToString("MMM d, yyyy"); }
                            else if (u?.Joined != null) { joinedText = u.Joined.ToString(); }
                            var status = (string)(u?.Status ?? "");
                            var statusClass = (string)(u?.StatusBadgeClass ?? "text-bg-secondary");
                    <tr>
                        <td class="fw-semibold">@((string)(u?.Name ?? ""))</td>
                        <td>@((string)(u?.Email ?? ""))</td>
                        <td>@((string)(u?.Role ?? ""))</td>
                        <td>@joinedText</td>
                        <td><span class="badge @statusClass">@status</span></td>
                        <td class="text-end">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" asp-controller="Users" asp-action="Details" asp-route-id="@(u?.Id)">View</a>
                                <a class="btn btn-sm btn-outline-primary" asp-controller="Users" asp-action="Edit" asp-route-id="@(u?.Id)">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-controller="Users" asp-action="Delete" asp-route-id="@(u?.Id)">Delete</a>
                            </div>
                        </td>
                    </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-secondary py-4">No users found.</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
    </script>
}
