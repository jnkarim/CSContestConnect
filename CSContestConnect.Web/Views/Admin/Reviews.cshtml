@{
    ViewData["Title"] = "Reviews";
    Layout = "_Layout";
    ViewBag.HideNavbar = true; // Show admin navbar
}

<!-- Admin Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mb-4">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-controller="Admin" asp-action="Index">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Events">Events</a></li>
                <li class="nav-item"><a class="nav-link active" asp-controller="Admin" asp-action="Reviews">Reviews</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-xxl">
    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Review Queue</h5>
                    <form class="d-flex" method="get" asp-controller="Reviews" asp-action="Index">
                        <select name="status" class="form-select form-select-sm me-2" aria-label="Filter status">
                            <option value="">All</option>
                            <option value="Pending">Pending</option>
                            <option value="Approved">Approved</option>
                            <option value="Rejected">Rejected</option>
                        </select>
                        <button class="btn btn-sm btn-outline-secondary">Filter</button>
                    </form>
                </div>
                <div class="card-body">
                    @{
                        var reviews = ViewBag.Reviews as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
                    }
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Title</th>
                                    <th>User</th>
                                    <th>Rating</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @if (reviews.Any())
                            {
                                foreach (var r in reviews)
                                {
                                    string dateText = "";
                                    if (r?.Date is DateTime dt) { dateText = dt.ToString("MMM d, yyyy"); }
                                    else if (r?.Date != null) { dateText = r.Date.ToString(); }
                                    var status = (string)(r?.Status ?? "");
                                    var statusClass = (string)(r?.StatusBadgeClass ?? "text-bg-secondary");
                            <tr>
                                <td class="fw-semibold">@((string)(r?.Title ?? ""))</td>
                                <td>@((string)(r?.UserName ?? ""))</td>
                                <td>@(r?.Rating ?? "")</td>
                                <td>@dateText</td>
                                <td><span class="badge @statusClass">@status</span></td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Reviews" asp-action="Details" asp-route-id="@(r?.Id)">View</a>
                                        <a class="btn btn-sm btn-outline-success" asp-controller="Reviews" asp-action="Approve" asp-route-id="@(r?.Id)">Approve</a>
                                        <a class="btn btn-sm btn-outline-danger" asp-controller="Reviews" asp-action="Reject" asp-route-id="@(r?.Id)">Reject</a>
                                    </div>
                                </td>
                            </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6" class="text-center text-secondary py-4">No reviews found.</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Stats -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header"><h5 class="mb-0">Summary</h5></div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-secondary">Pending</span>
                        <span class="fw-semibold">@((int?)ViewBag.PendingReviews ?? 0)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-secondary">Approved</span>
                        <span class="fw-semibold">@((int?)ViewBag.ApprovedReviews ?? 0)</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-secondary">Rejected</span>
                        <span class="fw-semibold">@((int?)ViewBag.RejectedReviews ?? 0)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
    </script>
}
