@{
    ViewData["Title"] = "Admin Login";
    Layout = "_Layout";
    ViewBag.HideNavbar = true; // keep auth screen clean
    var errorMessage = ViewData["ErrorMessage"] as string;
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <style>
        .brand-side--admin-login {
            background-image:
                linear-gradient(rgba(10,10,20,.45), rgba(10,10,20,.65)),
                url('https://images.unsplash.com/photo-1516321318427-74e5d732f89d?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
}

<div class="screen mesh d-flex align-items-center justify-content-center px-3">
    <div class="auth-wrap container">
        <div class="panel panel--compact row g-0">
            <!-- Left Brand -->
            <div class="brand-side brand-side--admin-login col-12 col-lg-5 d-flex flex-column justify-content-between">
                <div class="brand-header px-4 pt-4 d-flex align-items-center justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-light btn-xs rounded-pill fw-semibold px-3">
                        <i class="bi bi-house-door-fill"></i> Home
                    </a>
                    <div class="d-flex align-items-center gap-2">
                        <div class="logo-dot"></div>
                        <strong class="text-white-50">CSContestConnect</strong>
                    </div>
                </div>
                <div class="brand-content px-4 px-md-4 pb-4">
                    <h2 class="fw-extrabold h2 text-white mb-2">Admin Access</h2>
                    <p class="mb-0 text-white-75 small">
                        Manage hackathons, programming contests, and user accounts with full control.
                    </p>
                </div>
            </div>

            <!-- Right Form -->
            <div class="form-side col-12 col-lg-7 p-4 p-md-5">
                <div class="form-head mb-3">
                    <h3 class="text-white mb-1 fw-bold">Sign in as Admin</h3>
                    <p class="muted mb-0 small">Use your admin email and password</p>
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger py-2" role="alert">
                        @errorMessage
                    </div>
                }

                <form asp-controller="Account" asp-action="AdminLogin" method="post" novalidate>
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="adminEmail" class="form-label tiny">Admin Email</label>
                        <div class="field">
                            <span class="input-icon">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                    <path d="M4 6h16v12H4z" stroke="#cfcdf6" stroke-width="1.5" opacity=".9"/>
                                    <path d="M4 7l8 6 8-6" stroke="#cfcdf6" stroke-width="1.5"/>
                                </svg>
                            </span>
                            <input type="email" id="adminEmail" name="Email" class="form-control bg-glass" placeholder="admin@example.com" required />
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="mb-2">
                        <label for="adminPassword" class="form-label tiny">Password</label>
                        <div class="input-group field-group">
                            <span class="input-icon">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                    <rect x="5" y="10" width="14" height="9" rx="2" stroke="#cfcdf6" stroke-width="1.5"/>
                                    <path d="M8 10V8a4 4 0 018 0v2" stroke="#cfcdf6" stroke-width="1.5"/>
                                </svg>
                            </span>
                            <input type="password" id="adminPassword" name="Password" class="form-control bg-glass" placeholder="••••••••" required aria-describedby="toggleAdminPassword" />
                            <button type="button" class="btn password-toggle-btn" id="toggleAdminPassword" aria-label="Show password">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-gradient py-3" id="adminLoginBtn">
                            Sign in as Admin
                        </button>
                    </div>

                    <p class="tiny mt-3 mb-0">
                        Not an admin? <a asp-controller="Account" asp-action="Login" class="link-accent">Back to regular login</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const toggle = document.getElementById('toggleAdminPassword');
            const pwd = document.getElementById('adminPassword');

            if (toggle && pwd) {
                toggle.addEventListener('click', function () {
                    const isPwd = pwd.getAttribute('type') === 'password';
                    pwd.setAttribute('type', isPwd ? 'text' : 'password');
                    toggle.setAttribute('aria-label', isPwd ? 'Hide password' : 'Show password');
                    toggle.innerHTML = isPwd ? '<i class="bi bi-eye-slash"></i>' : '<i class="bi bi-eye"></i>';
                });
            }
        })();
    </script>
}
