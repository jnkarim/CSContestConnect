@{
    ViewData["Title"] = "Registration Successful";
    Layout = "_Layout";
    ViewBag.HideNavbar = true;
}
@section Styles {
<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
<style>
.brand-side--login {
    background-image:
        linear-gradient(rgba(10,10,20,.45), rgba(10,10,20,.65)),
        url('https://images.unsplash.com/photo-1504384308090-c894fdcc538d?q=80&w=1170&auto=format&fit=crop');
    background-size: cover;
    background-position: center;
}
</style>
}

<div class="screen mesh d-flex align-items-center justify-content-center px-3">
  <div class="auth-wrap container">
    <div class="panel panel--compact row g-0">
      <div class="brand-side brand-side--login col-12 col-lg-5"></div>
      <div class="form-side col-12 col-lg-7 p-4 p-md-5 text-center">
        <h3 class="text-white fw-bold mb-2">Registration Successful!</h3>
        <p class="text-white-75 small mb-3">
          Thank you for registering. Please check your email (<strong>@ViewData["Email"]</strong>) 
          and click the confirmation link to activate your account.
        </p>
        <p class="text-white-75 small mb-4">
          If you don't see the email within a few minutes, please check your spam folder.
        </p>
        <div class="d-grid gap-2">
          <a asp-action="Login" class="btn btn-primary">Return to Login</a>
          <a asp-action="ResendConfirmationEmail" class="btn btn-outline-light">Resend Confirmation Email</a>
        </div>
      </div>
    </div>
  </div>
</div>