@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.getElementById('loginForm');
            const toggle = document.getElementById('togglePassword');
            const pwd = document.getElementById('Password');
            const summary = document.querySelector('[asp-validation-summary]') || document.querySelector('.alert-danger');
            const btn = document.getElementById('loginBtn');
            const googleBtn = document.getElementById('googleLoginBtn');

            function showSummary(msg) {
                if (!summary) return;
                summary.textContent = msg;
                summary.classList.remove('d-none');
            }

            if (toggle && pwd) {
                toggle.addEventListener('click', function () {
                    const isPwd = pwd.getAttribute('type') === 'password';
                    pwd.setAttribute('type', isPwd ? 'text' : 'password');
                    toggle.setAttribute('aria-label', isPwd ? 'Hide password' : 'Show password');
                    toggle.innerHTML = isPwd ? '<i class="bi bi-eye-slash"></i>' : '<i class="bi bi-eye"></i>';
                });
            }

            if (form) {
                form.addEventListener('submit', function (e) {
                    const email = document.getElementById('Email');
                    if (!email.value.trim() || !pwd.value.trim()) {
                        e.preventDefault();
                        showSummary('Please fill in all required fields.');
                        return;
                    }
                    if (btn) {
                        btn.disabled = true;
                        const original = btn.innerHTML;
                        btn.dataset.original = original;
                        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Signing in...';
                        setTimeout(function () {
                            if (btn.disabled && btn.dataset.original) {
                                btn.disabled = false;
                                btn.innerHTML = btn.dataset.original;
                            }
                        }, 8000);
                    }
                });
            }

            // Google button loading state
            if (googleBtn) {
                const googleForm = googleBtn.closest('form');
                googleForm.addEventListener('submit', function () {
                    googleBtn.disabled = true;
                    googleBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Redirecting...';
                });
            }

            // ---- Defensive: if some other script/partial injected an extra Google button, remove it
            // Keep the LAST one inside #googleLoginForm and mark earlier ones as duplicates.
            const googleButtons = Array.from(document.querySelectorAll('.google-login-btn'));
            if (googleButtons.length > 1) {
                googleButtons.slice(0, -1).forEach(b => b.classList.add('duplicate'));
            }
        })();
    </script>
