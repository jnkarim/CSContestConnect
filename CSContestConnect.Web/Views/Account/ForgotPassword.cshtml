@model CSContestConnect.Web.Models.Auth.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
    ViewBag.HideNavbar = true;
}
@section Styles {
<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
<style>
.brand-side--login {
    background-image:
        linear-gradient(rgba(10,10,20,.45), rgba(10,10,20,.65)),
        url('https://images.unsplash.com/photo-1504384308090-c894fdcc538d?q=80&w=1170&auto=format&fit=crop');
    background-size: cover;
    background-position: center;
}
</style>
}

<div class="screen mesh d-flex align-items-center justify-content-center px-3">
  <div class="auth-wrap container">
    <div class="panel panel--compact row g-0">
      <div class="brand-side brand-side--login col-12 col-lg-5"></div>
      <div class="form-side col-12 col-lg-7 p-4 p-md-5">
        <h3 class="text-white mb-3 fw-bold">Reset Password</h3>
        <p class="text-white-75 small mb-4">
            Enter your registered email address. If it exists and is verified, 
            you'll receive reset instructions.
        </p>
        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
        <form asp-action="ForgotPassword" method="post" novalidate>
          @Html.AntiForgeryToken()
          <div class="mb-3">
            <label asp-for="Email" class="form-label tiny">Email</label>
            <input asp-for="Email" type="email" class="form-control bg-glass" placeholder="you@example.com" />
            <span asp-validation-for="Email" class="text-danger small"></span>
          </div>
          <div class="d-grid"><button class="btn btn-gradient py-3">Send Reset Link</button></div>
          <div class="text-center mt-3"><a asp-action="Login" class="link-accent tiny">Back to Login</a></div>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts { 
    <partial name="_ValidationScriptsPartial" /> 
}