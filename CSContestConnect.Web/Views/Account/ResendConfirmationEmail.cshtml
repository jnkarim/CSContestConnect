@{
    ViewData["Title"] = "Resend Email Confirmation";
    Layout = "_Layout";
    ViewBag.HideNavbar = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

<div class="screen mesh d-flex align-items-center justify-content-center px-3">
    <div class="auth-wrap container">
        <div class="panel panel--compact row g-0 justify-content-center">
            <div class="form-side col-12 col-md-8 col-lg-6 p-4 p-md-5">
                <div class="form-head mb-4 text-center">
                    <h3 class="text-white mb-2 fw-bold">Resend Email Confirmation</h3>
                    <p class="muted mb-0 small">Enter your email to receive a new confirmation link</p>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger py-2 mb-3" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <form method="post" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label for="email" class="form-label tiny">Email Address</label>
                        <div class="field">
                            <span class="input-icon">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M4 6h16v12H4z" stroke="#cfcdf6" stroke-width="1.5" opacity=".9"/>
                                    <path d="M4 7l8 6 8-6" stroke="#cfcdf6" stroke-width="1.5"/>
                                </svg>
                            </span>
                            <input type="email" id="email" name="email" class="form-control bg-glass" placeholder="you@example.com" required />
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-gradient py-3">
                            Send Confirmation Email
                        </button>
                    </div>
                </form>

                <div class="text-center">
                    <p class="tiny mb-0">
                        Remember your password? <a asp-action="Login" class="link-accent">Sign in</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>