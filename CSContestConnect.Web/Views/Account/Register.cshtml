@model CSContestConnect.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Sign up";
    Layout = "_Layout";
    ViewBag.HideNavbar = true; // keep auth screen clean
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <style>
        /* Proper Unsplash usage with crop & quality params */
        .brand-side--register{
            background-image:
                linear-gradient(rgba(10,10,20,.42), rgba(10,10,20,.66)),
                url('https://images.unsplash.com/photo-1634836023845-eddbfe9937da?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-position: center 45%;
            background-repeat: no-repeat;
        }
    </style>
}

<div class="screen mesh d-flex align-items-center justify-content-center px-3">
    <div class="auth-wrap container">
        <div class="panel panel--compact row g-0">
            <!-- Left / Brand -->
            <div class="brand-side brand-side--register col-12 col-lg-5 d-flex flex-column justify-content-between">
                <div class="brand-header px-4 pt-4 d-flex align-items-center justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-light btn-xs rounded-pill fw-semibold px-3">
                        <i class="bi bi-house-door-fill"></i> Home
                    </a>
                    <div class="d-flex align-items-center gap-2">
                        <div class="logo-dot"></div>
                        <strong class="text-white-50">CSContestConnect</strong>
                    </div>
                </div>

                <div class="brand-content px-4 pb-4">
                    <h2 class="fw-extrabold h2 text-white mb-2">Join the arena</h2>
                    <p class="mb-0 text-white-75 small">
                        Post events, manage tickets, and compete in top programming contests.
                    </p>
                </div>
            </div>

            <!-- Right / Form -->
            <div class="form-side col-12 col-lg-7 p-4 p-md-5">
                <div class="form-head mb-3">
                    <h3 class="text-white mb-1 fw-bold">Create account</h3>
                    <p class="muted mb-0 small">Start your journey with CSContestConnect</p>
                </div>

                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 d-none" role="alert"></div>

                <form asp-action="Register" method="post" id="registerForm" novalidate>
                    @Html.AntiForgeryToken()

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label tiny">Email</label>
                        <div class="field">
                            <span class="input-icon">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                    <path d="M4 6h16v12H4z" stroke="#cfcdf6" stroke-width="1.5" opacity=".9"/>
                                    <path d="M4 7l8 6 8-6" stroke="#cfcdf6" stroke-width="1.5"/>
                                </svg>
                            </span>
                            <input asp-for="Email" type="email" class="form-control bg-glass" placeholder="you@example.com" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label tiny">Password</label>
                        <div class="input-group field-group">
                            <span class="input-icon">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                    <rect x="5" y="10" width="14" height="9" rx="2" stroke="#cfcdf6" stroke-width="1.5"/>
                                    <path d="M8 10V8a4 4 0 018 0v2" stroke="#cfcdf6" stroke-width="1.5"/>
                                </svg>
                            </span>
                            <input asp-for="Password" type="password" class="form-control bg-glass" placeholder="Create a strong password" required aria-describedby="toggleRegPassword" />
                            <button type="button" class="btn password-toggle-btn" id="toggleRegPassword" aria-label="Show password">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label tiny">Confirm password</label>
                        <div class="input-group field-group">
                            <span class="input-icon">
                                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                                    <rect x="5" y="10" width="14" height="9" rx="2" stroke="#cfcdf6" stroke-width="1.5"/>
                                    <path d="M8 10V8a4 4 0 018 0v2" stroke="#cfcdf6" stroke-width="1.5"/>
                                </svg>
                            </span>
                            <input asp-for="ConfirmPassword" type="password" class="form-control bg-glass" placeholder="Repeat password" required aria-describedby="toggleRegConfirm" />
                            <button type="button" class="btn password-toggle-btn" id="toggleRegConfirm" aria-label="Show password">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <!-- Terms -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="agree" required>
                        <label class="form-check-label tiny" for="agree">
                            I agree to the <a asp-controller="Home" asp-action="Terms" class="link-accent">Terms</a> &amp; <a asp-controller="Home" asp-action="Privacy" class="link-accent">Privacy Policy</a>
                        </label>
                    </div>

                    <!-- Submit -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-gradient py-3" id="registerBtn">
                            Create account
                        </button>
                    </div>

                    <p class="tiny mt-3 mb-0">
                        Already have an account? <a asp-controller="Account" asp-action="Login" class="link-accent">Sign in</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const form = document.getElementById('registerForm');
            const btn = document.getElementById('registerBtn');
            const pwd = document.getElementById('Password');
            const cpw = document.getElementById('ConfirmPassword');
            const togglePwd = document.getElementById('toggleRegPassword');
            const toggleCpw = document.getElementById('toggleRegConfirm');
            const summary = document.querySelector('[asp-validation-summary]') || document.querySelector('.alert-danger');

            function showSummary(msg) {
                if (!summary) return;
                summary.textContent = msg;
                summary.classList.remove('d-none');
            }
            function toggle(button, input) {
                if (!button || !input) return;
                button.addEventListener('click', function () {
                    const isPwd = input.getAttribute('type') === 'password';
                    input.setAttribute('type', isPwd ? 'text' : 'password');
                    button.setAttribute('aria-label', isPwd ? 'Hide password' : 'Show password');
                    button.innerHTML = isPwd ? '<i class="bi bi-eye-slash"></i>' : '<i class="bi bi-eye"></i>';
                });
            }
            toggle(togglePwd, pwd);
            toggle(toggleCpw, cpw);

            if (form) {
                form.addEventListener('submit', function (e) {
                    const email = document.getElementById('Email');
                    if (!email.value.trim() || !pwd.value.trim() || !cpw.value.trim()) {
                        e.preventDefault();
                        showSummary('Please fill in all required fields.');
                        return;
                    }
                    if (pwd.value !== cpw.value) {
                        e.preventDefault();
                        showSummary('Passwords do not match.');
                        return;
                    }
                    if (btn) {
                        btn.disabled = true;
                        const original = btn.innerHTML;
                        btn.dataset.original = original;
                        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Creating account...';
                        setTimeout(function () {
                            if (btn.disabled && btn.dataset.original) {
                                btn.disabled = false;
                                btn.innerHTML = btn.dataset.original;
                            }
                        }, 8000);
                    }
                });
            }
        })();
    </script>
}
