@model IEnumerable<CSContestConnect.Web.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<h2 class="mb-3">Approved Events</h2>

@if (!Model.Any())
{
    <p>No events yet.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
        @foreach (var e in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@e.Title</h5>
                        <p class="card-text">@e.Description</p>
                        <ul class="list-unstyled small text-muted">
                            <li><strong>When:</strong> @e.StartsAt:g â€“ @e.EndsAt:g (UTC)</li>
                            <li><strong>Where:</strong> @(e.IsOnline ? "Online" : e.Location ?? "TBA")</li>
                            <li><strong>Price:</strong> @e.Price.ToString("0.##")</li>
                        </ul>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@e.Id">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
