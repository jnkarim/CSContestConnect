<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSContestConnect.Web</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Site styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSContestConnect.Web.styles.css" asp-append-version="true" />

    @* Page-specific styles (like auth.css) *@
    @await RenderSectionAsync("Styles", required: false)
    
</head>
<body class="neo-body">
    @if (ViewBag.HideNavbar != true)
    {
        @if (ViewBag.HideNavbar != true)
        {
            <header>
                @await Html.PartialAsync("_Navbar")
            </header>
        }
    }

@{
    var isHome = ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
                 && ViewContext.RouteData.Values["action"]?.ToString() == "Index";
}
<main role="main" class="@(isHome ? "container-fluid p-0" : "container-xxl px-4 px-md-5")">
    @RenderBody()
</main>


    <footer class="footer-neo mt-auto py-3">
        <div class="container-xxl px-4 px-md-5 d-flex justify-content-between align-items-center small">
            <span class="text-muted">&copy; 2025 — CSContestConnect.Web</span>
            <a class="link-neo" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
