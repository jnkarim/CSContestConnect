<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSContestConnect</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" /> *@

    <!-- Bootstrap Icons -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="neo-body">
    @if (ViewBag.HideNavbar != true)
    {
        <header>
            @await Html.PartialAsync("_Navbar")
        </header>
    }

    @{
        var isHome = ViewContext.RouteData.Values["controller"]?.ToString() == "Home"
                     && ViewContext.RouteData.Values["action"]?.ToString() == "Index";
    }
    <main role="main" class="@(isHome ? "container-fluid p-0" : "container-xxl px-4 px-md-5")">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Hidden global logout form (used by navbar link) -->
    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-none">
        @Html.AntiForgeryToken()
    </form>
</body>
</html>
