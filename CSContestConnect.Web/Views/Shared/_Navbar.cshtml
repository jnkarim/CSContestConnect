@* Views/Shared/_Navbar.cshtml *@
@using CSContestConnect.Web.Data
@{
    var active = (string?)(ViewData["Active"] ?? "");

    bool isAuth  = User?.Identity?.IsAuthenticated ?? false;
    bool isAdmin = User?.IsInRole(IdentitySeed.RoleAdmin) ?? false;
    bool isUser  = User?.IsInRole(IdentitySeed.RoleUser)  ?? false;

    // Only non-admins should see Profile
    bool showProfile = isAuth && !isAdmin;
}

<nav class="navbar navbar-expand-lg navbar-dark nav-glass shadow-sm sticky-top">
    <div class="container-xxl px-4 px-md-5">

        <!-- Brand goes to Admin/Dashboard for admins, Home for everyone else -->
        <a class="navbar-brand d-flex align-items-center gap-2 fw-semibold brand"
           asp-controller="@(isAdmin ? "Admin" : "Home")"
           asp-action="@(isAdmin ? "Dashboard" : "Index")"
           aria-label="CSContestConnect">
            <span>CSContest<span class="text-accent">Connect</span></span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="topNav" class="collapse navbar-collapse">
            <!-- Left: Primary links -->
            <ul class="navbar-nav me-auto gap-lg-1">

                @* ----- Admin menu ----- *@
                @if (isAdmin)
                {
                    <li class="nav-item">
                        <a class="nav-link nav-link-neo @(active=="AdminDashboard"?"active":"")"
                           asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-neo @(active=="Approvals"?"active":"")"
                           asp-controller="AdminEvents" asp-action="Pending">Approvals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-neo @(active=="Rejected"?"active":"")"
                           asp-controller="AdminEvents" asp-action="Rejected">Rejected</a>
                    </li>
                }
                else
                {
                    @* ----- Public/User menu ----- *@
                    <li class="nav-item">
                        <a class="nav-link nav-link-neo @(active=="Home"?"active":"")"
                           asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-neo @(active=="Events"?"active":"")"
                           asp-controller="Events" asp-action="Index">Events</a>
                    </li>

                    @if (isUser)
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-link-neo @(active=="MyEvents"?"active":"")"
                               asp-controller="Events" asp-action="My">My Events</a>
                        </li>
                    }
                }

                @* Profile only for non-admin users *@
                @if (showProfile)
                {
                    <li class="nav-item">
                        <a class="nav-link nav-link-neo @(active=="Profile"?"active":"")"
                           asp-controller="UserProfile" asp-action="Index">Profile</a>
                    </li>
                }
            </ul>

            <!-- Right: Auth / CTA -->
            <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                @if (isAuth)
                {
                    @* Hide "Post an Event" for admins *@
                    @if (!isAdmin)
                    {
                        <li class="nav-item">
                            <a class="btn btn-ghost-neo btn-sm" asp-controller="Events" asp-action="Create">
                                <i class="bi bi-plus-lg"></i> Post an Event
                            </a>
                        </li>
                    }

                    <li class="nav-item d-none d-lg-block">
                        <span class="nav-link text-muted">Hi, @(User.Identity?.Name ?? "User")!</span>
                    </li>

                    <li class="nav-item">
                        <a href="#" class="btn btn-outline-neo btn-sm"
                           onclick="document.getElementById('logoutForm').submit(); return false;">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link nav-link-neo" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-neo btn-sm" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus"></i> Sign up
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" class="d-none"></form>
